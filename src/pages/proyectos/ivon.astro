---

// DESCRIPCIÓN: Página de detalle para IVON, usando el layout especializado para apps.

import AppProjectLayout from '../../layouts/AppProjectLayout.astro';
import { PROYECTOS } from '../../data/projects.tsx';

// 1. Buscamos el proyecto específico en nuestro array de datos usando su 'id' único.
const projectData = PROYECTOS.find(p => p.id === 'ivon');
---

<AppProjectLayout frontmatter={projectData}>
    
    {projectData?.contenido.map(parrafo => (
        <p>{parrafo}</p>
    ))}
    
</AppProjectLayout>