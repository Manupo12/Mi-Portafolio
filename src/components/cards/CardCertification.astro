---
// ARCHIVO: src/components/cards/CardCertification.astro
// FECHA: 11 de septiembre de 2025
// DESCRIPCIÓN: Versión final de la tarjeta de certificación con sintaxis corregida.

import type { Certification } from '../../data/types';
import { ExternalLink } from 'lucide-react';
import { LOGO_MAP } from '../../utils/institutionLogos.ts';

const { certification } = Astro.props as { certification: Certification };
const { titulo, institucion, fecha, thumbnailSrc, pdfSrc, institutionLogos } = certification;
---
<a
    href={pdfSrc}
    target="_blank"
    rel="noopener noreferrer"
    class="group block bg-gray-900/50 border border-gray-700/60 rounded-xl overflow-hidden
           hover:border-emerald-400/50 hover:-translate-y-1 transition-all duration-300"
>
    <div class="aspect-[4/3] overflow-hidden border-b border-gray-700/60">
        <img
            src={thumbnailSrc}
            alt={`Certificado de ${titulo}`}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        />
    </div>

    <div class="p-4 flex flex-col flex-grow">
        <div class="flex-grow">
            <h3 class="font-bold text-white group-hover:text-emerald-400 transition-colors line-clamp-2">{titulo}</h3>
            <p class="text-sm text-gray-400">{institucion}</p>
        </div>

        <div class="flex items-center justify-between pt-4 mt-4 border-t border-gray-800">
            <div class="flex items-center gap-2 h-5">
                {institutionLogos?.map(logoName => {
                    const logoSrc = LOGO_MAP.get(logoName);
                    // Sintaxis corregida para Astro: se devuelve el HTML directamente.
                    return logoSrc ? <img src={logoSrc.src} alt={`Logo de ${logoName}`} class="h-full w-auto" /> : null;
                })}
            </div>
            <p class="text-sm font-semibold text-gray-500 flex-shrink-0">{fecha}</p>
        </div>
    </div>

    <div class="absolute top-3 right-3 p-1.5 bg-gray-950/50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <ExternalLink size={16} className="text-emerald-400" />
    </div>
</a>